##---------- Keybindings for bspwm ----------##

# Terminal (termite)
super + Return
	bspterm

# Floating terminal
super + shift + Return
	bspterm -f

##---------- Rofi Launcher & Menus ----------##

# Rofi App Launcher
alt + F1
	sh ~/.config/bspwm/rofi/bin/launcher

# Rofi Network Menu
super + n
	nmd

# Rofi Menus
super + {w,m,x,r}
	sh ~/.config/bspwm/rofi/bin/{windows,mpd,powermenu,asroot}

ctrl + alt + {s,n,t}
	sh ~/.config/bspwm/rofi/bin/{screenshot,network,themes}

##---------- Applications ----------##

# Launch Apps
super + shift + {f,b,e}
	{kitty -e ranger,firefox-developer-edition,zathura}

##---------- System ----------##

# Take a screenshot
Print
	scrot 'Screenshot_%Y-%m-%d-%S_$wx$h.png' -e 'mv $f $$(xdg-user-dir PICTURES) ; viewnior $$(xdg-user-dir PICTURES)/$f'
	
# Take a screenshot in 5 second
alt + Print	
	scrot -d 5 'Screenshot_%Y-%m-%d-%S_$wx$h.png' -e 'mv $f $$(xdg-user-dir PICTURES) ; viewnior $$(xdg-user-dir PICTURES)/$f'

# Brighness control
XF86MonBrightness{Up,Down}
	backlight{-up,-down}
	
# Volume control
XF86Audio{RaiseVolume,LowerVolume}
	volume{-up,-down}

XF86AudioMute
	amixer set Master toggle
	
# Music control
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

##---------- Bspwm ----------##

# Lockscreen
super + shift + Backspace
    betterlockscreen -l

# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd

# Quit/Restart bspwm
ctrl + alt + {q,r}
	bspc {quit,wm -r}

# Close App
super + q
	bspc node -c

# kill
ctrl + alt + Escape
    xkill

# Toggle beetwen floating & tiled
# super + space
#     bspc node -t "~"{floating,tiled}

# Pseudo Tiled & tiled mode
# super + {p,t}
#     bspc node -t {pseudo_tiled,tiled}

#
# layout stuff
#

# Fullscreen or Monocle
super + f
	bspc desktop -l next
	
# Split horizontal, vertical or cancel
super + {s,v,c}
	bspc node -p {east,south,cancel}

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Swap the current node and the biggest node
super + g
  bspc node -s biggest

# Set the node flags
super + ctrl + {m,x,s,z}
	bspc node -g {marked,locked,sticky,private}

#
# Focus / swap
#

# Focus the node in a given direction
super + {_,shift +}{h,j,k,l}
  bspc node -{f,s} {west,south,north,east}

# Change focus to next window, including floating window
alt + {_,shift + }Tab
	bspc node -f {next.local,prev.local}

# Switch workspace
ctrl + alt + {Left,Right}
	bspc desktop -f {prev.local,next.local}

# Switch to last opened workspace
super + {Tab,grave}
	bspc {node,desktop} -f last

# Send focused window to another workspace
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}'

# Resizing windows
super + ctrl + {h,j,k,l}
  ~/.config/bspwm/bin/node_resize {west,south,north,east} 20
	
## Move floating windows
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Spiral mode
super + ctrl + t
  bspc config automatic_scheme spiral

# Longest side mode
super + ctrl + y
  bspc config automatic_scheme longest_side

# automatic layout
super + ctrl + u
  bspc config automatic_scheme first_child

# Hide/Unhide Window
super + shift + i
	winmask		

##---------- EOF ----------##
