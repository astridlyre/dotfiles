* {
    background-color:      #181819;
    border-color:          #373c40;
    text-color:           #b2b2b2;
    font:            "Iosevka 12";
}

window {
    anchor:     center;
    location:   center;
    border:     1px solid;
    padding:    4px;
    width:      33%;
    children:   [ horibox ];
}

horibox {
    orientation: horizontal;
    children:   [ prompt, entry, listview ];
}

prompt {
    padding:    4px;
}

listview {
    layout:     vertical;
    spacing:    4px;
    padding:    4px;
    lines:      15;
}

entry {
    expand:     false;
    width:      10em;
    padding:    4px;
}

element {
    padding: 0px 2px;
}
element selected {
    background-color: #8DA54E;
    text-color: #181819;
}
