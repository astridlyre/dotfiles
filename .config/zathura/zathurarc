set font "PragmataPro Mono Liga 13"

# Background colors
set default-bg "#101010"             # Main background color (base)
set statusbar-bg "#272727"           # Status bar background (mantle)
set inputbar-bg "#272727"            # Input bar background (mantle)

# Foreground colors
set default-fg "#b0b0b0"             # Text color (text)
set statusbar-fg "#b0b0b0"           # Status bar text (text)
set inputbar-fg "#b0b0b0"            # Input bar text (text)

# Highlight and selection
set highlight-color "#ff7219"        # Highlight color (orange accent)
set highlight-active-color "#d9ba73" # Active highlight (yellow)
set completion-bg "#272727"          # Completion menu background (mantle)
set completion-fg "#8ebeec"          # Completion text (info)
set completion-highlight-bg "#101010"   # Completion highlight background (base)
set completion-highlight-fg "#ff7676"   # Completion highlight text (danger)

# Link and error colors
set recolor-lightcolor "#b0b0b0"     # Link color or light color in recolor mode (text)
set recolor-darkcolor "#101010"      # Dark color in recolor mode (base)

# Recolor mode (for night/low-light reading)
set recolor "#272727"                # Enable recolor mode (mantle for a softer low-light)

# Additional settings
set notification-bg "#ff7676"        # Notification background (danger)
set notification-fg "#101010"        # Notification text (base)

set sandbox strict
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set selection-clipboard clipboard

map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print
