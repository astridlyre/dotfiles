#!/usr/bin/env bash

# Terminate already running bar instances
killall -q polybar

# Wait until the processes have been shut down
while pgrep -u $UID -x polybar >/dev/null; do sleep 1; done

# Launch polybar
polybar laptop -c ~/.config/bspwm/polybar/config &

ext_connected=$(xrandr -q | grep 'HDMI-0')
if [[ $ext_connected = *connected* ]]; then
  polybar external -c ~/.config/bspwm/polybar/config &
fi

